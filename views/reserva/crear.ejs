<%- include("../template/cabecera") %>
<div class="container ">
    <h1 class="d-flex flex-row justify-content-center alig-items-center">Añadir reserva</h1>
        <div class="d-flex flex-row justify-content-center alig-items-center">
          <form action="/reserva" method="post">
            <div class="form-group p-2">
                <label for="restaurante" class="text-warning p-1 me-5">Nombre del restaurante:</label><br>
                <label>
                    <input class="form-check-input" type="radio" name="restaurante" value="Restaurante Filomena"> Restaurante Filomena
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="restaurante" value="Restaurante La Escapada"> Restaurante La Escapada
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="restaurante" value="Restaurante Miss"> Restaurante Miss
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="restaurante" value="Restaurante Hamboor"> Restaurante Hamboor
                </label>
            </div>
            <div class="form-group p-2">
                <label for="usuario" class="text-warning p-1">Usuario:</label><br>
                <input type="text" class="form-control" id="usuario" name="usuario">
            </div>
            <div class="form-group p-2">
                <label for="fecha" class="text-warning p-1">Fecha:</label><br>
                <input type="date" class="form-control" id="fecha" name="fecha">
            </div>
            <div class="form-group p-2">
                <label for="hora" class="text-warning p-1 me-5">Hora:</label><br>
                <label>
                    <input class="form-check-input" type="radio" name="hora" value="14:00"> 14:00
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="hora" value="14:30"> 14:30
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="hora" value="21:00"> 21:00
                </label><br>
                <label>
                    <input class="form-check-input" type="radio" name="hora" value="21:30"> 21:30
                </label>
            </div>
            <div class="form-group p-2">
                <label for="numero" class="text-warning p-1">Teléfono:</label><br>
                <input type="number" class="form-control" id="numero" name="numero">
            </div>
            <button type="submit" class="btn btn-warning m-2">Añadir</button>
        </form>
        </div>
</div>
    

<%- include("../template/footer") %>